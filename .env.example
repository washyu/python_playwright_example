# Playwright Test Configuration
# Copy this file to .env and adjust values as needed

# Browser mode
# Set to true to run tests in headed mode (visible browser)
# Set to false or leave empty for headless mode
HEADED=false

# Slow motion delay (milliseconds)
# Slows down Playwright operations for debugging
# Default: 500 in headed mode, 0 in headless mode
SLOWMO=0

# Uncomment to enable headed mode with slow motion
# HEADED=true
# SLOWMO=1000
